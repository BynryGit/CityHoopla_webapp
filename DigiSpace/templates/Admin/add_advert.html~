        var i = 1;

function add_working() {

	 i = i + 1;

	
	 $("#working_hours").append(
		 "<div class='row'><div class='col-md-3'><div class='form-group'><label class='control-label '>Day<span class='required'> * </span></label>"+
				"<select class='form-control sel2' id='' name='options2'><option value=''>Select Day</option><option value='Monday'>Monday</option>"+
				"<option value='Tuesday'>Tuesday</option><option value='Wednesday'>Wednesday</option><option value='Thursday'>Thursday</option>"+
				"<option value='Friday'>Friday</option><option value='Saturday'>Saturday</option> <option value='Sunday'>Sunday</option></select>"+ 
				"</div></div><div class='form-group col-md-3'><label class='control-label '>Start Time </label>"+
				"<input class='starttime' id='start"+i+"' value='8:00 AM' style='width: 100%;' /></div><div class='form-group col-md-3'>"+
				"<label class='control-label '>End Time</label><input class='endtime' id='end"+i+"' value='9:00 PM' style='width: 100%;'/></div>"+
				"</div>"
	 );
	 
	 var start = $("#start"+i).kendoTimePicker().data("kendoTimePicker");
    var end = $("#end"+i).kendoTimePicker().data("kendoTimePicker");
    $('.sel2').select2();

                    //define min/max range
                    start.min("8:00 AM");
                    start.max("6:00 PM");

                    //define min/max range
                    end.min("8:00 AM");
                    end.max("7:30 AM");
	 
	 }
